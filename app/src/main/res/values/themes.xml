<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication324" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryVariant">@color/lightblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/lightblue</item>
        <item name="stStrokeColor">@color/lightblue</item>
        <item name="stSolidBackground">true</item>
        <item name="stGravity">center</item>
        top or center
        <item name="stStrokeWidth">2dp</item>
        <!--   <item name="stIconStart">@drawable/logoremove</item>-->
        <item name="stLength">LONG</item>
        LONG or SHORT
    </style>
    <style name="mytoastheart">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/lightblue</item>
        <item name="stStrokeColor">@color/lightblue</item>
        <item name="stSolidBackground">true</item>
        <item name="stGravity">center</item>
        top or center
        <item name="stStrokeWidth">2dp</item>
        <!--   <item name="stIconStart">@drawable/logoremove</item>-->
        <item name="stLength">LONG</item>
        LONG or SHORT
        <item name="stIconStart">@drawable/baseline_favorite_24</item>
    </style>

    <style name="Theme.MyApplication324.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplication324.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication324.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>