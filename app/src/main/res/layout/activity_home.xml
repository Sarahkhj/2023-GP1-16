<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <TextView
        android:id="@+id/wel"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="487dp"
        android:text="Welcome"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="94dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="444dp"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="22sp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="58dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="66dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="371dp"
        android:text="Log out" />

    <Button
        android:id="@+id/choose_file_btn"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/meow"
        android:layout_below="@+id/choose_word_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="163dp"
        android:text="Choose PDF File" />

    <Button
        android:id="@+id/choose_word_btn"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="-360dp"
        android:layout_marginEnd="95dp"
        android:text="Choose Word File" />

    <TextView
        android:id="@+id/file_path"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/meow"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="175dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="78dp"
        android:text="File Path" />

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:layout_width="match_parent"
        android:id="@+id/meow"
        android:layout_height="wrap_content"
        app:mbn_circleColor="#ffffff"
        android:layout_alignParentBottom="true"
        app:mbn_backgroundBottomColor="#ffffff"
        app:mbn_countBackgroundColor="#ff6f00"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="#90a4ae"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="@color/lightblue"
        app:mbn_shadowColor="#1f212121"/>


    <!--
        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:headerLayout="@layout/header"
            app:menu="@menu/nav_menu"
            app:itemIconTint="@color/lightblue"
            app:itemTextColor="@color/bluelogo"/> -->
</RelativeLayout>